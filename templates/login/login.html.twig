{% extends 'base.html.twig' %}

{% block body %}
	<section id="login">
		{% if error %}
			<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}
		<div class="main-full-logo">
			<a href="{{ path('app_homepage') }}">
				<img class="logo-light" src="{{ asset('images/logos/my-logo-light-mode.svg') }}" alt="Logo Valentin Tainon">
				<img class="logo-dark" src="{{ asset('images/logos/my-logo-dark-mode.svg') }}" alt="Logo Valentin Tainon">
			</a>
		</div>
		<form action="{{ path('app_login') }}" method="post" class="login-form">
			<h2>Connexion</h2>
			<div class="input-box">
				<input type="text" id="username" name="_username" required>
				<label for="username">Nom d'utilisateur</label>
				<i class="fa-solid fa-envelope"></i>
			</div>
			<div class="input-box">
				<input type="password" id="password" name="_password" required>
				<label for="password">Mot de passe</label>
				<i class="fa-solid fa-lock"></i>
			</div>
			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
			<button class="btn" type="submit">Connexion</button>
		</form>
	</section>
{% endblock %}
